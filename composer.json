{
    "name": "banklink/banklink",
    "description": "Easily way to integrate with Brazilian banks",
    "keywords": ["bank", "banklink"],
    "homepage": "https://github.com/banklink/banklink",
    "license": "MIT",
    "authors": [
        {
            "name": "William Trevisan",
            "email": "williamtrev@hotmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "illuminate/contracts": "^11.0||^12.0",
        "symfony/dom-crawler": "^7.3"
    },
    "require-dev": {
        "laravel/pint": "^1.24.0",
        "orchestra/testbench": "^10.3.0",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^4.0.0",
        "pestphp/pest-plugin-arch": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.0",
        "phpstan/phpstan": "^2.1.22",
        "rector/rector": "^2.1.4"
    },
    "autoload": {
        "psr-4": {
            "Banklink\\": "src/"
        },
        "files": [
            "src/Banklink.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "rector",
            "pint"
        ],
        "test:type-coverage": "php -d memory_limit=-1 ./vendor/bin/pest --type-coverage --min=90",
        "test:typos": "peck",
        "test:lint": [
            "pint --test"
        ],
        "test:unit": "pest",
        "test:types": "phpstan analyse --memory-limit=-1",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:typos",
            "@test:unit",
            "@test:types"
        ]
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
